{
	"name": "taskflow",
	"displayName": "TaskFlow",
	"description": "Execute markdown tasks with AI agents",
	"version": "0.1.0",
	"publisher": "taskflow",
	"repository": {
		"type": "git",
		"url": "https://github.com/bk-bf/taskflow.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "taskflow.startTask",
				"title": "Start Task"
			},
			{
				"command": "taskflow.retryTask",
				"title": "Retry Task"
			},
			{
				"command": "taskflow.test",
				"title": "TaskFlow: Test"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && mocha out/test/**/*.test.js",
		"test-agent": "npm run compile && node out/src/test-agent-standalone.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "^18.0.0",
		"@types/mocha": "^10.0.6",
		"typescript": "^5.3.0",
		"mocha": "^10.2.0"
	},
	"dependencies": {
		"markdown-it": "^13.0.2"
	}
}